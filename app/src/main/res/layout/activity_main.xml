    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/border"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Light"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/light_button"
            android:layout_width="match_parent"
            android:text="On"
            android:textSize="32sp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Fan"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/fan_button"
            android:layout_width="match_parent"
            android:text="On"
            android:textSize="32sp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Door"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/door_button"
            android:layout_width="match_parent"
            android:text="On"
            android:textSize="32sp"
            android:layout_height="match_parent"/>
    </LinearLayout>
   <!-- <TextView
        android:layout_width="match_parent"
        android:text="Weather"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:textSize="56sp"
        android:textColor="#FFF"
        android:background="@drawable/border1"
        android:layout_height="wrap_content"/>

        -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="22dp"
        android:baselineAligned="false"
        android:paddingTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temperature_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="0 Â°C"
                android:textColor="@color/text_light"
                android:textSize="46sp"/>

            <TextView
                android:id="@+id/sky_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sunny"
                android:textColor="@color/text_light"
                android:textSize="26sp"/>

            <TextView
                android:id="@+id/humidity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Humidity: 0 %"
                android:textColor="@color/text_light"
                android:textSize="26sp"/>

            <TextView
                android:id="@+id/air_quality_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Air quality"
                android:textColor="@color/text_light"
                android:textSize="26sp"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/graph_intent_button"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:text="Show Last week graphs"
        android:textAllCaps="false"
        android:layout_height="wrap_content"/>
</LinearLayout>